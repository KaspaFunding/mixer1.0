{
  "name": "kaspa-mixer-standalone",
  "version": "1.0.0",
  "description": "Standalone Kaspa Mixer - CLI and GUI versions",
  "main": "electron-main.js",
  "bin": "index.js",
  "dependencies": {
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.7",
    "qrcode": "^1.5.3",
    "websocket": "^1.0.35"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.4",
    "tsup": "^8.0.1"
  },
  "scripts": {
    "prebuild": "node scripts/embed-wasm.js",
    "prebuild:gui": "node scripts/fetch-kaspad.js && node scripts/fetch-bun.js",
    "build": "pkg . --targets node18-win-x64 --output mixer-cli.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64",
    "start": "node index.js",
    "electron": "electron .",
    "build:gui": "npm run prebuild:gui && electron-builder --win --x64",
    "build:gui:all": "electron-builder --win --x64 --linux --mac",
    "icon:build": "node scripts/build-icon.js",
    "pool:build": "tsup pool/index.ts --format cjs --no-minify --no-sourcemap --target node18 --out-dir pool/dist --clean"
  },
  "pkg": {
    "assets": [
      "lib/**/*"
    ],
    "scripts": [
      "index.js",
      "lib/**/*.js",
      "kaspa/kaspa.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "build": {
    "appId": "com.kaspa.mixer",
    "productName": "Kaspa Mixer",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "electron-main.js",
      "lib/**/*",
      "kaspa/**/*",
      "gui/**/*",
      "assets/**/*",
      "pool/**/*",
      "package.json",
      "node_modules/qrcode/**/*",
      "node_modules/pngjs/**/*",
      "node_modules/dijkstrajs/**/*"
    ],
    "extraFiles": [
      {
        "from": "kaspa/kaspad.exe",
        "to": ".",
        "filter": ["kaspad.exe"]
      },
      {
        "from": "start-kaspad.bat",
        "to": ".",
        "filter": ["start-kaspad.bat"]
      },
      {
        "from": "bun/bun.exe",
        "to": "bun",
        "filter": ["bun.exe"]
      }
    ],
    "extraResources": [
      "kaspa/**/*",
      {
        "from": "start-kaspad.bat",
        "to": ".",
        "filter": ["start-kaspad.bat"]
      },
      {
        "from": "kaspa/kaspad.exe",
        "to": ".",
        "filter": ["kaspad.exe"]
      }
    ],
    "asarUnpack": [
      "node_modules/qrcode/**/*",
      "node_modules/pngjs/**/*",
      "node_modules/dijkstrajs/**/*"
    ]
  }
}
